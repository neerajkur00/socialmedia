<%- include('./partials/header')%>

  <a href="/profile"><i class="ri-close-circle-fill  absolute text-5xl right-[18%] top-[10vh] text-zinc-800"></i></a>
  <h1 class="text-center mt-5 p-3 text-3xl font-serif font-bold text-blue-400">Create Your Post</h1>

  <form action="/create-post" method="post" enctype="multipart/form-data"
    class="w-[60vw] h-[70vh] bg-white border-2 shadow-2xl rounded-[50px] m-auto mt-[10vh] flex">
    <div class="w-[50%] h-full">
      <input class="input-image hidden" type="file" name="media">
      <img class="w-[60%] m-auto mt-5" src="/images/download (4).png" alt="image">
      <p
        class="mx-[35%] w-max p-2  rounded-xl mt-10 trigger-image text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
        Select now</p>
    </div>
    <div class="w-[45%]">
      <textarea type="text" class="w-full h-[60%] bg-gray-200 p-5 text-black font-serif  border-2 mt-5 rounded-[30px]" name="title"
        placeholder="Write Your Thought?" ></textarea>
      <button
        class="m-auto text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 mt-10">Create
        Post</button>
    </div>
  </form>


  <script>
    const inputimage = document.querySelector(".input-image");
    const triggerimage = document.querySelector(".trigger-image")

    triggerimage.addEventListener("click", function () {
      inputimage.click()
    })
  </script>
  <%- include('./partials/footer')%>