<%- include('./partials/header')%>
    <%- include('./partials/nav')%>


        <form action="/login" method="post"
               class="w-[30%] h-[50%]   mt-20 border bg-white shadow-4xl transition-all border-2 flex flex-col p-10 gap-5 m-auto rounded-3xl">
            <h1 class="text-2xl font-bold text-center uppercase">Login here</h1>
            <input class="p-5 text-2xl rounded-2xl border border-gray-500" type="text" placeholder="username"
                name="username">
            <input class="p-5 text-2xl rounded-2xl border border-gray-500" type="password" placeholder="*********"
                name="password">
            <a class="text-green-400 font-bold" href="/forgot-email">Forgot Password ?</a>
            <button
                class="text-white bg-[#FF9119] hover:bg-[#FF9119]/80 focus:ring-4 focus:outline-none focus:ring-[#FF9119]/50 font-medium rounded-lg text-sm px-5 py-2.5   dark:hover:bg-[#FF9119]/80 dark:focus:ring-[#FF9119]/40 me-2 mb-2 ">Log
                In</button>
            <p class="text-blue-600">Don't Have an Account? <a class="text-red-400" href="/register">Sign Up</a></p>
        </form>

