<%- include('./partials/header')%>

<a href="/profile" class="p-10 text-3xl"><i class="ri-arrow-left-line"></i></a>

<form action="/resetPassword/<%= user._id%>" method="post" class="w-[30%] mt-20 border-2 bg-white shadow-2xl flex flex-col p-10 gap-5 m-auto rounded-3xl">
    <h1 class="text-2xl font-serif font-bold text-center p-3">Reset Your Password.</h1>
    <input class="p-3 text-2xl rounded-2xl border border-red-500 text-center font-thin font-serif" type="password" placeholder="Your Oldpassword" name="oldpassword">
    <input class="p-3 text-2xl rounded-2xl border border-red-500 text-center font-thin font-serif" type="password" placeholder="Your Newpassword" name="newpassword">
    <button class="text-gray-900 bg-gradient-to-r from-teal-200 to-lime-200 hover:bg-gradient-to-l hover:from-teal-200 hover:to-lime-200 focus:ring-4 focus:outline-none focus:ring-lime-200 dark:focus:ring-teal-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Reset Password</button>
</form>

<%- include('./partials/footer')%>